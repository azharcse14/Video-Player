<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/icon_id_fv"
        android:layout_width="70dp"
        android:layout_height="58dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/ic_baseline_folder_24"
        app:layout_constraintBottom_toBottomOf="@id/folder_name_id_fv"
        app:layout_constraintStart_toStartOf="parent"
        android:tint="@color/cool_pink"
        app:layout_constraintTop_toTopOf="@id/folder_name_id_fv" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/folder_name_id_fv"
        android:layout_width="0dp"
        android:layout_height="28dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:padding="2dp"
        android:text="Folder Name"
        app:layout_constraintStart_toEndOf="@id/icon_id_fv"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>